<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>圖片貼上與下載工具</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', '微軟正黑體', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 w-full max-w-2xl text-center">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">圖片貼上與下載工具</h1>
        <p class="text-gray-500 mb-6">在頁面任何地方按下 <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg">Ctrl</kbd> + <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg">V</kbd> 貼上圖片。</p>
        
        <!-- 圖片顯示區域 -->
        <div id="image-container" class="mt-4 border-2 border-dashed border-gray-300 rounded-lg min-h-[300px] flex items-center justify-center bg-gray-50 transition-all duration-300">
            <div id="placeholder" class="text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-2">等待貼上圖片...</p>
            </div>
            <img id="pasted-image" class="hidden max-w-full max-h-[60vh] rounded-md" alt="Pasted Image"/>
        </div>
        
        <!-- 控制項區域 (檔名輸入 + 下載按鈕) -->
        <div id="controls-container" class="mt-6 space-y-4">
            <!-- 控制項將由 JS 動態加入 -->
        </div>
    </div>
    
    <!-- Canvas 用於圖片轉換，保持隱藏 -->
    <canvas id="canvas" class="hidden"></canvas>

    <script>
        const imageContainer = document.getElementById('image-container');
        const placeholder = document.getElementById('placeholder');
        const pastedImage = document.getElementById('pasted-image');
        const controlsContainer = document.getElementById('controls-container');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        // 監聽貼上事件
        window.addEventListener('paste', handlePaste);

        function handlePaste(e) {
            // 從剪貼簿中尋找檔案
            const items = (e.clipboardData || e.originalEvent.clipboardData).items;
            let imageFile = null;

            for (let i = 0; i < items.length; i++) {
                if (items[i].type.indexOf('image') !== -1) {
                    imageFile = items[i].getAsFile();
                    break;
                }
            }

            if (!imageFile) {
                // 如果沒貼上圖片，可以顯示提示
                showToast('請貼上圖片檔案！');
                return;
            }

            // 使用 FileReader 讀取圖片
            const reader = new FileReader();
            reader.onload = function(event) {
                pastedImage.src = event.target.result;
                pastedImage.onload = function() {
                    // 圖片載入後的操作
                    placeholder.classList.add('hidden');
                    pastedImage.classList.remove('hidden');
                    imageContainer.classList.remove('border-dashed');
                    imageContainer.classList.add('p-0');
                    
                    // 將圖片繪製到 canvas
                    canvas.width = pastedImage.naturalWidth;
                    canvas.height = pastedImage.naturalHeight;
                    ctx.drawImage(pastedImage, 0, 0);

                    // 顯示控制項
                    showControls();
                }
            };
            reader.readAsDataURL(imageFile);
        }

        function showControls() {
            controlsContainer.innerHTML = `
                <div>
                    <input type="text" id="filename-input" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full max-w-xs mx-auto p-2.5" placeholder="請輸入檔案名稱（可選）">
                </div>
                <div class="flex justify-center items-center space-x-4">
                    <button onclick="downloadImage('png')" class="px-5 py-2.5 font-medium bg-blue-50 text-blue-600 rounded-lg text-sm transition-all duration-300 hover:bg-blue-100 focus:ring-4 focus:outline-none focus:ring-blue-200">
                        下載 PNG
                    </button>
                    <button onclick="downloadImage('jpeg')" class="px-5 py-2.5 font-medium bg-green-50 text-green-600 rounded-lg text-sm transition-all duration-300 hover:bg-green-100 focus:ring-4 focus:outline-none focus:ring-green-200">
                        下載 JPG
                    </button>
                </div>
            `;
        }

        function downloadImage(format) {
            const filenameInput = document.getElementById('filename-input');
            const customName = filenameInput.value.trim();
            const mimeType = `image/${format}`;

            // 如果是 jpg，背景填滿白色以避免透明部分變黑
            if (format === 'jpeg') {
                ctx.globalCompositeOperation = 'destination-over';
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
            }

            // 將 jpeg 的品質參數設為 1.0 (最高品質)
            const dataUrl = canvas.toDataURL(mimeType, 1.0);
            
            // 建立下載連結
            const link = document.createElement('a');
            const timestamp = new Date().getTime();
            const finalFilename = customName || `image_${timestamp}`;
            link.download = `${finalFilename}.${format}`;
            link.href = dataUrl;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // 簡易的提示訊息功能
        function showToast(message) {
            const toast = document.createElement('div');
            toast.textContent = message;
            toast.className = 'fixed bottom-5 left-1/2 -translate-x-1/2 bg-gray-800 text-white px-4 py-2 rounded-lg shadow-lg';
            document.body.appendChild(toast);
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
</body>
</html>

